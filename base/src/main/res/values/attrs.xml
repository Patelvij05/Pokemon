<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="backgroundStyle" format="enum">
        <enum name="info" value="1"/>
        <enum name="warn" value="2"/>
        <enum name="error" value="3"/>
    </attr>


    <attr name="message" format="string"/>
    <attr name="imageIcon" format="integer" />
    <attr name="contentDesc" format="string" />
    <attr name="triangleLocation" format="enum" >
        <enum name="center" value="1" />
        <enum name="left" value="2" />
        <enum name="right" value="3" />
        <enum name="none" value="4" />
    </attr>
    <attr name="radius" format="float" />

    <declare-styleable name="PokemonBaseToolbar">
        <attr name="android:text" format="string"/>
        <attr name="showBackButton" format="boolean"/>
        <attr name="showCloseButton" format="boolean"/>
        <attr name="showRightButton" format="boolean"/>
        <attr name="showBottomBarLine" format="boolean"/>
        <attr name="textRightButton" format="string"/>
        <attr name="iconLeftButton" format="integer" />
        <attr name="iconRightButton" format="integer" />
    </declare-styleable>

    <declare-styleable name="PokemonBaseWarningMessage">
        <attr name="android:text" />
        <attr name="message" />
        <attr name="imageIcon" />
        <attr name="contentDesc" />
        <attr name="triangleLocation" />
        <attr name="marginTopText" format="integer" />
        <attr name="marginBottomText" format="integer" />
        <attr name="showWarningCloseButton" format="boolean" />
        <attr name="imageIconSize" format="integer" />
        <attr name="isImageIconCenter" format="boolean" />
        <attr name="radius" />
        <attr name="backgroundStyle" />
    </declare-styleable>

    <declare-styleable name="PokemonBaseWarningDownArrowMessage">
        <attr name="android:text" />
        <attr name="message" />
        <attr name="imageIcon" />
        <attr name="contentDesc" />
        <attr name="triangleLocation" />
        <attr name="radius" />
        <attr name="backgroundStyle" />
        <attr name="showButton" format="boolean" />
        <attr name="showCloseBtn" format="boolean" />
        <attr name="ButtonText" format="string" />
        <attr name="ButtonDesc" format="string" />
    </declare-styleable>

    <declare-styleable name="RatioCardView">
        <attr name="card_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="BaseCustomRecylerview">
        <attr name="columnCount" format="integer"/>
        <attr name="columnSpacing" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
        <attr name="rvp_inertia" format="boolean"/>
        <attr name="rvp_millisecondsPerInch" format="float" />
    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <attr format="dimension" name="piDotSpacing"/>
        <attr format="dimension" name="piDotBound"/>

        <attr format="dimension" name="piSize1"/>
        <attr format="dimension" name="piSize2"/>
        <attr format="dimension" name="piSize3"/>
        <attr format="dimension" name="piSize4"/>
        <attr format="dimension" name="piSize5"/>
        <attr format="dimension" name="piSize6"/>

        <attr format="integer" name="piAnimDuration"/>

        <attr format="reference" name="piAnimInterpolator"/>

        <attr format="color" name="piDefaultColor"/>
        <attr format="color" name="piSelectedColor"/>
    </declare-styleable>

</resources>